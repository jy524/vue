useradd 用户    --创建用户
userdel 用户    --删除用户
passwd 用户     --设置用户名称

groupadd 组名   --创建分组
groupdel 组名   --删除分组

useradd -g 组名 用户名  --创建用户并分组
usermod -g 组名 用户名  --修改用户分组

shutdow -h now  --立刻关机
shudown -h 1    --1个小时后关机
shutdown -r now --立刻重启

halt    --关机
reboot  --重启

su 用户 --切换用户

id 用户 --查看用户信息


init [012356]   --设置系统当前运行级别
0-关机
1-单用户模式
2-多用户未联网模式
3-多用户未联网模式
4-备用
5-图形界面模式
6-重启

man/help 指令   --查看指令的用法

pwd --查看当前地址路径

ls --查看当前目录下面的文件
ls -l --显示全部信息
ls -a --显示所有的文件

cd  --切换地址路径
cd ~    --回到家目录，即：/home/用户名


目录操作--重点
mkdir 名称  --创建目录
mkdir -p 名称   --创建多级目录
rmdir 名称  --阐述空目录

touch 文件名    --创建文件

cp 源文件 目标文件  --拷贝源文件到目标文件
cp -r 源文件 目标文件   --递归拷贝源文件到目标文件

rm 文件名   --删除文件
rm -rf 目录 --删除多级目录文件
rm -f 文件名    --不提示的删除文件

mv 源文件 目标文件 --拷贝源文件到目标文件

查看文件
cat 文件名
cat -n 文件名   --查看文件并显示行号
cat -n 文件名|more  --按照分页形式显示

more 文件名 --查看文件内容

less 文件名 --查看文件内容，多用于查看文件内容较大的文件

内容>文件名 --将输入内容覆盖写入文件
内容>>文件名    --将输入内容追加到文件

head 文件名 --查看文件前10行的内容
head -n 行数 文件名    --查看文件指定行数的内容

tail 文件名 --查看文件后10行的内容
tail -n 行数 文件名 --查看文件指定行数的后n行内容

in -s 原地址 软链接地址 --给原地址增加一个访问的软连接地址

history --查看所有的历史指令
history n    --查看指定数量的后n条历史指令
!i  --执行编号为i的历史指令

时间日期类
date --输出格式化的当前时间
date '+%Y' --输出年份
date -s 时间    --按照date格式化输出时间
cal --查看日历

收缩查找类
find 地址 -name 名称    --按照文件名称查找文件
find 地址 -user 名称    --按照文件所有者查找
find 地址 -size 大小    --按照文件大小查找

locate 文件名   --在updatedb后可快速定位文件

cat 文件|grep [-n|-i] 内容  --查看筛选文件中的内容

文件压缩了
gzip 文件   --压缩文件
gunzip 文件 --解压文件

zip [-r] 压缩包 文件 --压缩文件,选项-r支持多级压缩
unzip [-d 解压地址] 压缩包    --解压压缩包

tar -zvcf 压缩包 文件
tar -zxcf 压缩包 [-c 地址]  --按照地址解压文件

文件的所有者和所在组修改
chown 用户 文件 --修改文件所有者
chgrp 组名 文件 --修改文件的所在组

修改文件的权限
chmod u=?,g=?,o=? 文件  --修改文件的权限
w=4，r=2，x=1


定时任务--重点
crontab -e  --编辑定时任务
crontab -l  --查看定时任务
crontab -r  --删除所有的定时任务

